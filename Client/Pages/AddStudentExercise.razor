@page "/add-student-exercise"
@attribute [Authorize]

<PageTitle>Add StudentExercise</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save StudentExercise</RadzenAlert>
        <RadzenTemplateForm TItem="LearningApp.Server.Models.SvgDB.StudentExercise" Data="@(studentExercise)" Visible="@(studentExercise != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Exercise Name" Component="ExerciseName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(studentExercise.ExerciseName)" Name="ExerciseName" />
                    <RadzenRequiredValidator Component="ExerciseName" Text="ExerciseName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Subject" Component="Subject" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@(subjectsForSubjectID)" TextProperty="SubjectName" ValueProperty="SubjectID" AllowClear=true
                         Placeholder="Choose Subject" style="display: block; width: 100%" @bind-Value="@(studentExercise.SubjectID)" Name="SubjectID"
                        SelectedValue=@subjectsForSubjectIDValue Count=@subjectsForSubjectIDCount LoadData=@subjectsForSubjectIDLoadData />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>


@page "/subjects-audits"
@attribute [Authorize]

<PageTitle>SubjectsAudits</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="SubjectsAudits" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(subjectsAudits)" LoadData="@Grid0LoadData" Count="@count" TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Property="AuditID" Title="AuditID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Property="SubjectID" Title="SubjectID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Property="SubjectName" Title="Subject Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Property="ActionType" Title="Action Type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Property="ChangedOn" Title="Changed On">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Property="ChangedBy" Title="Changed By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LearningApp.Server.Models.SvgDB.SubjectsAudit" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="subjectsAudit">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, subjectsAudit)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
